<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/menu_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/attachment_region_bg"
        android:paddingRight="2.0dip">

        <ImageView
            android:id="@+id/title_btn_sequence"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8.0dip"
            android:background="@drawable/btn_back" />

        <FrameLayout
            android:id="@+id/title_selector_notes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3.0dip">
            <!--             下拉选择三角图表背景
                android:background="@drawable/selector_title_switch" -->
            <TextView
                android:id="@+id/tv_title"
                style="@style/title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/padding_view_right_14"
                android:text="台区基础信息" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="3.0dip"
            android:textColor="@color/white"
            android:textSize="@dimen/sp20"
            android:visibility="gone" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/register_linearLayout01"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"

        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="台区名称:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_taiqu"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linearLayout02"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="杆塔名称:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ext_towername"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linearLayout03"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:text="杆塔材质:"
            android:textColor="@color/black"
            android:textSize="17sp" />


            <RadioGroup
                android:id="@+id/group_material"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/shuini_pole"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 水泥杆" />

                <RadioButton
                    android:id="@+id/wooden_pole"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 木杆" />

                <RadioButton
                    android:id="@+id/steel_pole"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 钢塔杆" />
            </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linearLayout04"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:text="杆塔性质:"
            android:textColor="@color/black"
            android:textSize="17sp" />


            <RadioGroup
                android:id="@+id/radio_xingzhi"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/zhixian"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 直线" />

                <RadioButton
                    android:id="@+id/naizhang"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 耐张" />

            </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1.3"
            android:gravity="center_vertical"
            android:text="杆塔架设回路："
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/sp_huilu"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:entries="@array/huilus">
            </Spinner>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isNull"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="电压等级:"
            android:textColor="@color/black"
            android:textSize="17sp" />
            <RadioGroup
                android:id="@+id/group_voltage"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/voltage220"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 交流220V" />

                <RadioButton
                    android:id="@+id/voltage380"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 交流380V" />
            </RadioGroup>

            <TextView
                android:id="@+id/register_txtIsNull3"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.3"
                android:text="@string/isNull"
                android:textColor="@color/red"
                android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dip"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="运行状态:"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/use_status"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/inuse"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 在运" />

                <RadioButton
                    android:id="@+id/liuyong"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 留用" />

                <RadioButton
                    android:id="@+id/nouse"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio"
                    android:text=" 未投运" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isNull"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10px"
            android:layout_weight="1.1"
            android:gravity="center_vertical"
            android:text="坐标点号："
            android:textColor="@color/black"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/ext_zuobiao"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:ems="10"
                android:textColor="@color/black">
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/register_txtIsNull"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/isNull"
                android:textColor="@color/red"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <Button
            android:id="@+id/btn_fullview"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:background="@drawable/desktop_floatbtn_normal"
            android:text="全貌" />
        <Button
            android:id="@+id/btn_towerhead"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:background="@drawable/desktop_floatbtn_normal"
            android:text="塔头" />

        <Button
            android:id="@+id/btn_nameplate"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:background="@drawable/desktop_floatbtn_normal"
            android:text="铭牌" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_fullview"
            android:layout_width="100dip"
            android:layout_height="40dp"
             />

        <ImageView
            android:id="@+id/iv_tower_head"
            android:layout_width="100dip"
            android:layout_height="40dp" />

        <ImageView
            android:id="@+id/iv_nameplate"
            android:layout_width="100dip"
            android:layout_height="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_linearLayout11"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:background="@drawable/desktop_floatbtn_normal"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="100dip"
            android:layout_height="40dp"
            android:layout_marginLeft="15dip"
            android:background="@drawable/desktop_floatbtn_normal"
            android:text="保存" />
    </LinearLayout>

</LinearLayout>